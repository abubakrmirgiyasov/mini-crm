@model EmployeeBindingModel

@{
    ViewData["Title"] = "Добавить сотрудника";
}

<h1>Добавить сотрудника</h1>

<hr />

<div class="d-flex justify-content-center align-items-center">
    <div class="spinner-border text-primary" role="status" id="employeeLoader" style="display: none;">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<div class="row" id="employeeRow" style="display: none;">
    <div class="col-md-12">
        <form asp-action="Index" class="employee-action">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label">Фамилия</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label">Имя</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">Адрес электронной почты</label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Projects" class="control-label">Выберите проекта</label>
                <select asp-for="Projects" class="form-select" id="projectsSelect" multiple>
                    <option value="1" disabled selected>Выберите несколько проектов</option>
                </select>
                <span asp-validation-for="Projects" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end align-items-center">
                <button type="submit" class="btn btn-primary">
                    Создать
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
