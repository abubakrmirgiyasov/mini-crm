@model SignInBindingModel

@{
    ViewData["Title"] = "Пожалуйста войдите";
}

<div class="w-50 m-auto">
    <form asp-action="Index" class="login-form">
        <h1 class="h3 mb-3 fw-normal">Пожалуйста войдите</h1>

        <h3>Login: ivanov@ya.com</h3>
        <h3>Password: test_1</h3>

        <h3>@ViewData["Error"]</h3>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
            <label asp-for="Email">Адрес электронной почты</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль">
            <label asp-for="Password">Пароль</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <button class="btn btn-primary" type="submit">Войти</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}